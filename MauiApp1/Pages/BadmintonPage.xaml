<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp1.BadmintonPage"
    Title="Бадминтон">

    <!-- Всё располагаем в центре экрана -->
    <Grid>
        <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="20">

            <!-- Лейбл для отображения времени и калорий -->
            <Label x:Name="StatsLabel"
                   Text="Время: 0 сек | Калорий: 0"
                   FontSize="Medium"
                   HorizontalOptions="Center" />

            <!-- Большая круглая кнопка -->
            <Button x:Name="TrainingButton"
                    Text="Начать"
                    BackgroundColor="#00BFA5"
                    TextColor="White"
                    CornerRadius="125"
                    WidthRequest="250"
                    HeightRequest="250"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnTrainingButtonClicked" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>
